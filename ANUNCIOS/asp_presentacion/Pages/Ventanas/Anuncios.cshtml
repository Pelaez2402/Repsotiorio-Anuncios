@page
@model asp_presentacion.Pages.Ventanas.AnunciosModel
@{
    ViewData["Titulo"] = "";
}
<center>
    <div>
        <form method="POST"
              enctype="multipart/form-data">

            @Html.AntiForgeryToken()
            <div align="left">
                <h3>Anuncios</h3>
            </div>

            <div align="left"
                 class="bt_panel_buttons">
                <input type="submit"
                       value="Refrescar"
                       asp-page-handler="BtRefrescar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                       value="Nuevo"
                       asp-page-handler="BtNuevo"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                       value="Guardar"
                       asp-page-handler="BtGuardar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                       value="Cancelar"
                       asp-page-handler="BtCancelar"
                       class="btn btn-secondary"
                       disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
            </div>

            @if (Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                        Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden"
                       asp-for="@Model.Actual!.Id" />
            }
            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden"
                       asp-for="@Model.Actual!.Titulo" />
                <input type="hidden"
                       asp-for="@Model.Actual!.Descripcion" />
                <input type="hidden"
                       asp-for="@Model.Actual!.Precio" />
                <input type="hidden"
                       asp-for="@Model.Actual!.FechaPublicacion" />
                <input type="hidden"
                       asp-for="@Model.Actual!.UsuarioId" />
                <input type="hidden"
                       asp-for="@Model.Actual!.UbicacionId" />
                <input type="hidden"
                       asp-for="@Model.Actual!.Estado" />
                <input type="hidden"
                       asp-for="@Model.Actual!.PlanId" />

            }
            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Editar)
            {
                <div class="containers_vn panel panel-default">
                    <h3>Anuncios</h3>
                    <div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Titulo
                            </label>
                            <div class="col-lg-6">
                                <input id="nmTitulo"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.Titulo" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Descripcion
                            </label>
                            <div class="col-lg-6">
                                <input id="nmDescripcion"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.Descripcion" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Precio
                            </label>
                            <div class="col-lg-6">
                                <input id="nmPrecio"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.Precio" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                FechaPublicacion
                            </label>
                            <div class="col-lg-6">
                                <input id="nmFechaPublicacion"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.FechaPublicacion" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Usuario
                            </label>
                            <div class="col-lg-6">
                                <input id="nmUsuarioId"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.UsuarioId" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Ubicacion
                            </label>
                            <div class="col-lg-6">
                                <input id="nmUbicacionId"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.UbicacionId" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Estado
                            </label>
                            <div class="col-lg-6">
                                <input id="nmEstado"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.Estado" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                PlanDePublicacion
                            </label>
                            <div class="col-lg-6">
                                <input id="nmPlanId"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.PlanId" />
                            </div>
                        </div>
                    </div>
                </div>
            }

            @if (ViewData.ContainsKey("Mensaje"))
            {
                <input type="hidden"
                       asp-for="@Model.Accion" />
                @await Html.PartialAsync("../Emergentes/Mensajes.cshtml")
                ;
            }

            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <div class='popup'>
                    <div class='pp_del_inner'>
                        <div style='width:95%'>
                            <h2 align="left">
                                Mensaje
                            </h2>
                            <h4 align="left">
                                Desea borrar la anuncio?
                            </h4>
                            <h6 align="left">
                                @Model.Actual!.Titulo
                            </h6>
                            <br />
                            <br />
                            <input type="submit"
                                   value="Borrar"
                                   asp-page-handler="BtBorrar"
                                   class="btn btn-secondary" />
                            <input type="submit"
                                   value="Cerrar"
                                   asp-page-handler="BtCancelar"
                                   class="btn btn-secondary" />
                        </div>
                    </div>
                </div>
            }

            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
                        Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input id="flTitulo"
                       class="cts_forms form-control"
                       asp-for="@Model.Filtro!.Titulo"
                       placeholder="Titulo" />
                <br />

                <div class="containers_vn panel panel-default">
                    <table class="tb_data table table-striped table-bordered table-hover">
                        <tr>
                            <th>
                                Titulo
                            </th>
                            <th>
                                Descripcion
                            </th>
                            <th>
                                Precio
                            </th>

                            <th>
                                FechaPublicacion
                            </th>
                            <th>
                                Usuario
                            </th>
                            <th>
                                Ubicacion
                            </th>
                            <th>
                                Estado
                            </th>
                            <th>
                                PlanePublicacion
                            </th>
                            <th class="cl_actions">
                                Accion
                            </th>
                        </tr>
                        @if (Model != null && Model.Lista != null)
                        {
                            @foreach (var elemento in Model.Lista)
                            {
                                <tr>
                                    <td>
                                        @elemento.Titulo
                                    </td>

                                    <td>
                                        @elemento.Descripcion
                                    </td>
                                    <td>
                                        @elemento.Precio
                                    </td>
                                    <td>
                                        @elemento.FechaPublicacion
                                    </td>
                                    <td>
                                        @elemento.UsuarioId
                                    </td>
                                    <td>
                                        @elemento.UbicacionId
                                    </td>
                                    <td>
                                        @elemento.Estado
                                    </td>
                                    <td>
                                        @elemento.PlanId
                                    </td>

                                    <td>
                                        <input type="submit"
                                               value="Modicar"
                                               asp-page-handler="BtModificar"
                                               class="btn btn-secondary"
                                               asp-route-data="@elemento.Id" />
                                        <input type="submit"
                                               value="Borrar"
                                               asp-page-handler="BtBorrarVal"
                                               class="btn btn-secondary"
                                               asp-route-data="@elemento.Id" />
                                    </td>
                                </tr>
                            }
                        }
                    </table>
                </div>
            }
        </form>
    </div>
</center>

